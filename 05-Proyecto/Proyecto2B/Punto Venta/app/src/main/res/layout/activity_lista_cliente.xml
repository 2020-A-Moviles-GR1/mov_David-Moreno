<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.ListaClienteActivity">

    <TextView
        android:id="@+id/txtTituloListaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Lista Clientes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lv_listaClientes"
        android:layout_width="358dp"
        android:layout_height="336dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/btnmostrarClientes"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/btnmostrarClientes"
        app:layout_constraintTop_toBottomOf="@+id/btnmostrarClientes" />

    <Button
        android:id="@+id/btnmostrarClientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="MOSTRAR"
        app:layout_constraintEnd_toEndOf="@+id/txtTituloListaCliente"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/txtTituloListaCliente"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloListaCliente" />

</androidx.constraintlayout.widget.ConstraintLayout>